<h1>Driver's List</h1>

<p>There are currently <%= @drivers.length %> registered drivers.</p>

<ul>
  <% @drivers.each do |driver| %>
    <li>
      <strong>
        <%= link_to driver.name, driver_path(driver) %>
      </strong>
      <strong>
        VIN:
      </strong>
      <%= driver.vin%>
    </li>
  <% end %>
</ul>