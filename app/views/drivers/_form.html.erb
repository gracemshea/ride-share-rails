<main>
  <% if @driver.errors.messages.any? %>
    <section class="error-messages">
      There were some problems with your submission!
      <ul>
        <% @driver.errors.messages.each do |column, problem_list| %>
          <% problem_list.each do |problem| %>
            <li>
              <%= column %>: <%= problem %>
            </li>
          <% end %>
        <% end %>  
      </ul>
    </section>
  <% end %>

  <%= form_with model: @driver, class: "driver-form" do |f| %>
    <strong><p>Please fill out driver information</p></strong>

    <div>
      <%= f.label :name, "Please enter your name" %>
      <div class="field"><%= f.text_field :name, placeholder: "Ada Lovelace" %></div>
    </div>

    <div>
      <%= f.label :vin, "Please enter your Vehicle Identification Number" %>
      <div class="field"><%= f.text_field :vin, placeholder: "x-xxxx-xxxx-xxxx-xxxx" %></div>
    </div>

    <div class="submit"><%= f.submit button_text %></div>

  <% end %>
</main>