<h1>Passenger's List</h1>

<p>There are currently <%= @passengers.length %> registered passengers.</p>

<ul>
  <% @passengers.each do |passenger| %>
    <li>
      <strong>
        <%= link_to passenger.name, passenger_path(passenger) %>
      </strong>
      <strong>
        Phone Number:
      </strong>
      <%= passenger.phone_num%>
    </li>
  <% end %>
</ul>