<h2>Trip List</h2>
<h4>There are currently <%= @trips.length %> recorded trips.</h4>
<main>
  <ul>
    <% @trips.each do |trip| %>
      <li>
        <p>ID:<span class="fas fa-paw"></span>  <%= link_to trip.id, trip_path(trip.id) %></p>
        <p>Date:<%= trip.date %></p>
        <p>Rating:<%= trip.rating.nil? ? "TBD" : trip.rating %></p>
        <p>Cost: <%= trip.cost.nil? ? "TBD" :  "$" '%.2f' % (trip.cost/100) %></p>
        <p>Passenger:<span class="fas fa-paw"></span>  <%= link_to trip.passenger.name, passenger_path(trip.passenger.id) %></p>
        <p>Driver:<span class="fas fa-paw"></span>  <%= link_to trip.driver.name, driver_path(trip.driver.id) %> </p>
      </li>
    <% end %>
  </ul>
</main>