<h2>List of Trips</h2>

<p>There are currently <%= @trips.length %> recorded trips.</p>

<ul>
  <% @trips.each do |trip| %>
    <li>
      <p>ID:<%= link_to trip.id, trip_path(trip.id) %></p>
      <p>Date:<%= trip.date %></p>
      <p>Rating:<%= trip.rating %></p>
      <p>Cost: $<%='%.2f'%trip.cost%></p>
      <p>Passenger:<%= link_to trip.passenger.name, passenger_path(trip.passenger.id) %></p>
      <p>Driver:<%= link_to trip.driver.name, driver_path(trip.driver.id) %> </p>
    </li>
  <% end %>
</ul>
