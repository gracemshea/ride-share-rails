<h2>Trip details page</h2>

  <table>
    <tbody>
      <tr>
        <td>Trip ID: <%=@trip.id%> </td>
        <td>Date: <%=@trip.date%> </td>
        <td>Rating: <%=@trip.rating%> </td>
        <td>Cost: <%=  @trip.cost.nil? ? "TBD" :  "$" '%.2f'%(@trip.cost/100) %></td>
        <td>Passenger: <%= link_to @trip.passenger.name, passenger_path(@trip.passenger.id) %></td>
        <td>Driver: <%= link_to @trip.driver.name, driver_path(@trip.driver.id)%></td>
        <td><%= link_to "Edit Rating", edit_trip_path(@trip.id) %></td>
        <td><%= link_to "Delete", trip_path(@trip.id), method: :delete, data: { confirm: "Are you sure you want to delete this trip?" } %></td>
    </tbody>
  </table>
  